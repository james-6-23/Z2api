# Z2API Docker 环境配置示例
# 复制此文件为 .env 并修改相应的值

# API Keys
DENO_API_KEY=your-deno-api-key-here
GO_API_KEY=your-go-api-key-here

# 上游配置
UPSTREAM_URL=https://chat.z.ai/api/chat/completions
UPSTREAM_TOKEN=your-upstream-token-here

# Redis 配置
REDIS_PASSWORD=your-redis-password-here

# Grafana 配置
GRAFANA_PASSWORD=your-grafana-password-here

# SSL 证书路径（如果使用HTTPS）
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# 域名配置
DENO_DOMAIN=deno.z2api.local
GO_DOMAIN=go.z2api.local
MAIN_DOMAIN=z2api.local

# 性能配置
DENO_PERFORMANCE_MODE=balanced
GO_PERFORMANCE_MODE=secure
GO_MAX_CONNECTIONS=2000
GO_MEMORY_LIMIT=2048

# 日志配置
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=INFO

# 监控配置
ENABLE_METRICS=true
PROMETHEUS_RETENTION=200h
